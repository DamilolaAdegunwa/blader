{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": false,
    "sourceMap": true,
    "declaration": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "rootDir": "src/app/"
  },
  "exclude": [
    "node_modules"
  ]
}