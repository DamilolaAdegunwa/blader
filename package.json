{
  "name": "@tomware/blader",
  "version": "0.0.1",
  "description": "Playground for azure portal like blade controls made with angular.",
  "tags": [
    "tomware",
    "angular",
    "blades"
  ],
  "scripts": {
    "start": "npm run clean && tsc && concurrently \"npm run less:w\" \"npm run tsc:w\" \"npm run lite\" ",
    "lite": "lite-server -c tools/bs-config.json",
    "tslint": "tslint src/app/**/*.ts -e src/app/**/*.d.ts",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "test": "tsc && concurrently \"tsc -w\" \"karma start karma.conf.js\"",
    "test-once": "tsc && karma start karma.conf.js --single-run --enableCoverage",
    "clean": "gulp clean",
    "less": "gulp less",
    "less:w": "gulp watch-less"
  },
  "dependencies": {
    "@angular/common": "4.0.0-rc.1",
    "@angular/compiler": "4.0.0-rc.1",
    "@angular/core": "4.0.0-rc.1",
    "@angular/forms": "4.0.0-rc.1",
    "@angular/http": "4.0.0-rc.1",
    "@angular/platform-browser": "4.0.0-rc.1",
    "@angular/platform-browser-dynamic": "4.0.0-rc.1",
    "@angular/router": "4.0.0-rc.1",
    "core-js": "^2.4.1",
    "intl": "1.2.5",
    "rxjs": "5.0.1",
    "systemjs": "0.19.40",
    "zone.js": "^0.7.4"
  },
  "devDependencies": {
    "@types/jasmine": "2.5.38",
    "@types/node": "^6.0.46",
    "concurrently": "3.1.0",
    "del": "2.2.2",
    "gulp": "3.9.1",
    "gulp-watch": "4.3.11",
    "gulp-less": "3.3.0",
    "gulp-sourcemaps": "1.9.1",
    "gulp-tslint": "7.0.1",
    "gulp-typescript": "3.1.3",
    "jasmine-core": "2.5.2",
    "jasmine-spec-reporter": "2.7.0",
    "karma": "1.3.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-coverage": "1.1.1",
    "karma-jasmine": "1.1.0",
    "karma-phantomjs-launcher": "1.0.2",
    "karma-remap-istanbul": "0.3.2",
    "karma-sourcemap-loader": "0.3.7",
    "karma-spec-reporter": "0.0.26",
    "lite-server": "2.2.2",
    "merge2": "1.0.2",
    "path": "0.12.7",
    "phantomjs-prebuilt": "2.1.14",
    "require-dir": "0.3.1",
    "rimraf": "^2.5.4",
    "run-sequence": "1.2.2",
    "systemjs-builder": "0.15.34",
    "traceur": "0.0.111",
    "tslint": "4.4.2",
    "tslint-microsoft-contrib": "4.0.0",
    "typescript": "2.2.1"
  }
}